---
title:  Contato
---

<section id="contact">
  <div class="container">
    <div class="row">
      <div class="col-md-12 text-center">
        <h1 class="page-title">Contato</h1>
      </div>
      <div class="col-md-offset-3 col-md-6">

        <% content_tag :form, :action => "/contato/success" do %>
          <div class="form-group icon-left">
            <i class="fa fa-user"></i>    
            <input class="form-control" type="text" placeholder="Nome completo">
          </div>
          <div class="form-group">
            <span>Você é candidato?</span>
            <label class="radio-inline">
              <input type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1"> Sim
            </label>
            <label class="radio-inline">
              <input type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option2"> Não
            </label>
          </div>
          <div class="form-group icon-left">
            <i class="fa fa-envelope"></i>    
            <input class="form-control" type="text" placeholder="E-mail">
          </div>
          <div class="form-group icon-left">
            <i class="fa fa-phone"></i>    
            <input class="form-control" type="text" placeholder="Telefone">
          </div>
          <div class="form-group icon-left">
            <i class="fa fa-list"></i>    
            <select class="form-control" placeholder="Tipo de contato">
              <option>Tipo de contato</option>
            </select>
            <!-- input class="form-control" type="text" placeholder="Tipo de contato" -->
          </div>
          <div class="form-group icon-left">
            <i class="fa fa-envelope-square"></i>
            <input class="form-control" type="text" placeholder="Assunto">
          </div>
          <div class="form-group icon-left">
            <i class="fa fa-paper-plane"></i>    
            <textarea id="" class="form-control" name="" cols="30" rows="10" placeholder="Mensagem"></textarea>
          </div>
          <div id="message-panel" class="form-group">
            <div class="alert alert-danger">
              Mensagem de erro aqui
            </div>
          </div>
          <div class="form-group">
            <button class="btn btn-success btn-lg btn-block">Enviar</button>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</section>

