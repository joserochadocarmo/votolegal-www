controller: Explore
action:     index
---

<div class="header-filter">
  <h2>
    Filtre para encontrar seu candidato <i class="fa fa-chevron-down"></i>
  </h2>
</div>

<section id="explore">
  <div class="container">
    <div class="row">
      <div class="col-md-12 text-center">
        <h1 class="page-title">
          Candidatos
        </h1>
      </div>

      <style>
.candidate-list {
}
.candidate-panel {
  margin-bottom: 20px;
} 

.candidate-panel img {
  width: 100%;
} 
.candidate-panel .candidate-infor {
  color: #fff;
  width: 100%;
  min-height: 45px;
  position: relative;
  margin-top: -60px;
  _display: inline-block;
  background-color: rgba(56, 113, 72, 0,8);
  _background-color: rgb(56, 113, 72);

  /*debug*/
  _border: solid 1px red;
}
.candidate-infor h4 {
  font-size: 16px;
  padding: 15px 10px;
}
      </style>
