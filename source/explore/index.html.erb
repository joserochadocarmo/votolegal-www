      <div class="candidate-list">
        <% 3.times.each do %>
          <% 4.times.each do |id| %>
            <div class="candidate-panel col-md-3 col-sm-4 col-xs-6">
              <img src="/images/mocks/user0<%= id + 1 %>.jpg" alt="Joe Doe">
              <div class="candidate-infor">
                <h4><%= list[id] %> o PCdoB</h4>
              </div>
