
<!-- page heading -->
<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
      Dashboard <small>Overview do sistema</small>
    </h1>
    <ol class="breadcrumb">
      <li class="active">
        <i class="fa fa-dashboard"></i> Dashboard /
      </li>
    </ol>
  </div>
</div>
<!-- /.row -->


<div class="row" ng-controller="DashboardController">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-list fa-fw"></i> Últimos Candidatos Pré-Cadastrados</h3>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>#ID</th>
                                <th>Nome</th>
                                <th>CPF</th>
                                <th>Cargo</th>
                                <th>Status</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="i in list | orderBy: 'id'">
                              <td>{{ i.id }}</td>
                              <td title="{{ i.popular_name }}"><a href="/admin/candidate/?id={{ i.id }}"> <i class="fa fa-user"></i> {{ i.name }}</a></td>
                              <td>{{ i.cpf | brCpf }}</td>
                              <td><span class="label label-{{ (i.office_id == 1) ? 'primary' : 'default' }}">{{ (i.office_id == 1) ? 'Prefeito' : 'Vereador' }}</span></td>
                              <td class="text-danger">{{ i.status == 'pending' ? 'Pendente' : (i.status == 'deactivated' ? 'Inativo' : (i.status == 'activated' ? 'Ativo' : '') ) }}</td>
                              <td>
                                <a class="btn btn-xs btn-primary" href="#" ng-click="allow(i)">
                                  <i class="fa fa-check"></i> Autorizar
                                </a>
                                <a class="btn btn-xs btn-danger" href="#" ng-click="deny(i)">
                                  <i class="fa fa-close"></i> Negar
                                </a>
                              </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="row hide">
                  <div class="col-md-12 text-right">
                    <a class="btn btn-primary" href="/admin/pre-cadastro"> 
                      <i class="fa fa-list"></i>
                      Lista completa
                    </a>
                  </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /.row -->

