
<!-- page heading -->
<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
      Dashboard <small>Overview do sistema</small>
    </h1>
    <ol class="breadcrumb">
      <li class="active">
        <i class="fa fa-dashboard"></i> Dashboard /
      </li>
    </ol>
  </div>
</div>
<!-- /.row -->


<div class="row" ng-controller="AdminApprovalController as approval">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-list fa-fw"></i> Últimos Candidatos Pré-Cadastrados</h3>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>#ID</th>
                                <th>Nome</th>
                                <th>E-mail</th>
                                <th>Cargo</th>
                                <th>Status</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                          <% for i in (1..10) %>
                            <tr>
                              <td><%= i %></td>
                              <td title="Collor"><a href="#"> <i class="fa fa-user"></i> Fernando Affonso Collor de Mello</a></td>
                              <td>collor@collor.com.br</td>
                              <td><span class="label label-warning">Prefeito</span></td>
                              <td class="text-danger">Pendente</td>
                              <td>
                                <a class="btn btn-xs btn-primary" href="#">
                                  <i class="fa fa-check"></i> Autorizar
                                </a>
                                <a class="btn btn-xs btn-danger" href="#">
                                  <i class="fa fa-close"></i> Remover
                                </a>
                              </td>
                            </tr>
                          <% end %>
                        </tbody>
                    </table>
                </div>
                <div class="row hide">
                  <div class="col-md-12 text-right">
                    <a class="btn btn-primary" href="/admin/pre-cadastro"> 
                      <i class="fa fa-list"></i>
                      Lista completa
                    </a>
                  </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /.row -->

