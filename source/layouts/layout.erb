</head>
<body class="<%= page_classes %>">

    <!-- Static navbar -->
    <div id="nav" class="navbar-fixed-top" ng-controller="MenuController">
      <div class="container">
        <nav class="navbar navbar-votolegal">
          <div class="container-fluid">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <a class="navbar-brand" href="/">
                <img src="/images/logo.png" alt="VotoLegal">
              </a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
              <ul class="nav navbar-nav navbar-right">
                <li><a href="/sobre">O projeto</a></li>
                <li class="hide"><a href="#">Explore</a></li>
                <li><a href="/como-funciona">Como funciona?</a></li>
                <li class="dropdown" ng-hide="is_admin()">
                  <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                    Portal do candidato <span class="caret"></span>
                  </a>
                    <ul class="dropdown-menu">
                      <li ng-controller="AuthController">
                        <% content_tag :form, name: 'signinForm', class: 'angular-form', 'ng-submit': "authenticate(signinForm.$valid)", novalidate: '' do %>

                        <p class="text-center">
                          <input type="text" class="form-control" name="email" ng-model="signin.email" placeholder="Login" autofocus required>
                        </p>
                        <p class="text-center">
                          <input type="password" class="form-control" name="password" ng-model="signin.password" placeholder="Senha" required>
                        </p>
                        <p class="text-center">
                          <small><%= link_to 'Esqueci minha senha', '/conta/recuperar-senha' %></small>
                        </p>
                        <p class="text-center">
                          <button class="btn btn-success" type="submit">Entrar</button>
                        </p>
                        <p class="text-center">
                          <small>É candidato e não possui cadastro? <% link_to '/pre-cadastro' do %>Clique aqui<% end %></small>
                        </p>
                        <% end %>
                      </li>
                    </ul>
                </li>
                <li class="dropdown" ng-show="is_admin()" style="min-width: 175px;">
                 <a class="dropdown-toggle" data-toggle="dropdown" href="javascript:void(0);" role="button">
                    Olá, {{current_user.name}} <span class="caret"></span>
                  </a>
                    <ul class="dropdown-menu">
                      <li><a class="text-muted" href="/pre-cadastro/aprovado"><i class="fa fa-caret-right"></i> Meu perfil</a></li>
                      <li><a href="/cadastro-completo"><i class="fa fa-caret-right"></i> Editar perfil</a></li>
                      <li><a class="text-muted" href="#"><i class="fa fa-caret-right"></i> Histórico de Doações</a></li>
                      <li><a href="javascript:void(0);" ng-click="logout()">Sair</a></li>
                    </ul>
                </li>

              </ul>
            </div><!--/.nav-collapse -->
          </div>
        </nav>
      </div><!--/.container -->
    </div><!--/.container -->

    <div class="container-fluid">
      <div class="navbar-divider"></div>
    </div>


    <%= yield %>


    <!-- page footer -->
    <div class="container-fluid">
      <div class="navbar-divider"></div>
    </div>

    <!-- footer -->
    <footer id="footer">
      <div class="container">
        <div class="row">
          <div class="col-md-2 col-sm-3 col-xs-12">
            <h4>O projeto</h4>
